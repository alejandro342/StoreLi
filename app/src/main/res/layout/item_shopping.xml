<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_Item_Product_Shopping"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:text="Producto"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/img_Item_Product_Shopping"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_Item_Name_Product_Shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:text="--------"
            android:textSize="13sp"
            android:maxLength="20"
            app:layout_constraintStart_toEndOf="@+id/img_Item_Product_Shopping"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/txt_Item_Quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Cantidad: "
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/img_Item_Product_Shopping"
            app:layout_constraintTop_toBottomOf="@+id/txt_Item_Name_Product_Shopping" />

        <TextView
            android:id="@+id/txt_Item_Quantity_Product_Shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="----"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_Item_Quantity"
            app:layout_constraintStart_toEndOf="@+id/txt_Item_Quantity"
            app:layout_constraintTop_toTopOf="@+id/txt_Item_Quantity" />

        <TextView
            android:id="@+id/txt_Item_Quantity_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Precio: "
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/img_Item_Product_Shopping"
            app:layout_constraintTop_toBottomOf="@+id/txt_Item_Quantity" />

        <TextView
            android:id="@+id/txt_Item_Price_Product_Shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="----"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_Item_Quantity_Price"
            app:layout_constraintStart_toEndOf="@+id/txt_Item_Quantity_Price"
            app:layout_constraintTop_toTopOf="@+id/txt_Item_Quantity_Price" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>